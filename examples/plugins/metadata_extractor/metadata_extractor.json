{
    "name": "Metadata Extractor",
    "version": "2.0.0",
    "description": "Extracts and analyzes document metadata from PDF files with configuration-driven extraction, multiple export formats, and inter-plugin communication.",
    "author": "SAST Readium Team",
    "dependencies": [],
    "supportedTypes": [".pdf"],
    "features": [
        "document.processor",
        "document.metadata",
        "export.json",
        "export.xml",
        "export.csv",
        "hooks",
        "inter-plugin-communication"
    ],
    "configuration": {
        "autoExtract": true,
        "cacheMetadata": true,
        "exportFormats": ["json", "xml", "csv"],
        "extractFields": [
            "title",
            "author",
            "subject",
            "keywords",
            "producer",
            "creator",
            "pageCount",
            "fileSize",
            "dates",
            "fileName",
            "filePath"
        ]
    }
}
