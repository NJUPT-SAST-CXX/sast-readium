/*
 * ============================================================================
 * SAST Readium - Light Theme Stylesheet
 * ============================================================================
 *
 * Purpose:     Main light theme stylesheet for the entire application
 * Theme:       Light (default)
 * Components:  All UI widgets (windows, toolbars, buttons, inputs, etc.)
 * Loading:     Loaded by StyleManager when Theme::Light is active
 *
 * Organization:
 *   1. Main Window & Layout
 *   2. Toolbars & Tool Buttons
 *   3. Menus & Menu Items
 *   4. Buttons (Push, Tool, Radio, Check)
 *   5. Input Widgets (LineEdit, TextEdit, ComboBox)
 *   6. Lists, Trees & Tables
 *   7. Tabs & Tab Widgets
 *   8. Scrollbars
 *   9. Dialogs & Message Boxes
 *  10. Progress Bars & Status Bar
 *  11. Specialized Application Widgets
 *
 * Color Palette:
 *   Primary:    #0078d4 (Microsoft Blue)
 *   Background: #f6f7f9 (Light Gray)
 *   Text:       #333333 (Dark Gray)
 *   Border:     #c0c0c0 (Medium Gray)
 *   Hover:      #e8eaed (Lighter Gray)
 *   Accent:     #0066b8 (Darker Blue)
 *
 * Notes:
 *   - CSS3 properties (transition, box-shadow, transform) are NOT supported
 *   - Use QPropertyAnimation for animations instead
 *   - Keep in sync with dark.qss structure
 *
 * Last Updated: 2025-10-29
 * ============================================================================
 */
QMainWindow {
    background-color: #f6f7f9;
    color: #2b2b2b;
    font-family: "Segoe UI", "Noto Sans", system-ui, -apple-system, sans-serif;
}

/* Enhanced central widget with subtle depth */
QMainWindow::separator {
    background-color: #d6d8dc;
    width: 1px;
    height: 1px;
}

/* Stacked widget */
QStackedWidget {
    background-color: #f6f7f9;
    border: none;
}

/* Enhanced Menu Bar - Modern Design with Refined Visual Hierarchy */
QMenuBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #fbfbfc, stop: 1 #f0f1f3);
    border-bottom: 1px solid #d6d6d6;
    padding: 6px 10px;
    color: #3a3a3a;
    spacing: 4px;
}

QMenuBar::item {
    padding: 8px 16px;
    border-radius: 6px;
    margin: 2px 2px;
    background-color: transparent;
}

QMenuBar::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #eaf4ff, stop: 1 #d9ebfb);
    color: #0a66c2;
}

QMenuBar::item:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #d0e8f7, stop: 1 #b8dced);
    color: #005a9e;
}

/* Enhanced Menu - Modern Design with Better Depth and Spacing */
QMenu {
    background-color: #ffffff;
    border: 1px solid #cfd2d6;
    border-radius: 10px;
    padding: 10px 6px;
    color: #333333;
}

QMenu::item {
    padding: 9px 40px 9px 32px;
    border-radius: 5px;
    margin: 2px 6px;
    background-color: transparent;
}

QMenu::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #e8f4fd, stop: 1 #d8ecfa);
    color: #0066cc;
}

QMenu::item:disabled {
    color: #a8a8a8;
}

QMenu::separator {
    height: 1px;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 transparent, stop: 0.1 #d8d8d8,
                                stop: 0.9 #d8d8d8, stop: 1 transparent);
    margin: 8px 16px;
}

QMenu::icon {
    padding-left: 14px;
    padding-right: 10px;
}

QMenu::indicator {
    width: 18px;
    height: 18px;
    margin-left: 8px;
}

QMenu::indicator:non-exclusive:checked {
    image: url(:/images/checkmark.svg);
}

/* Enhanced Toolbar with Modern Visual Feedback and Depth */
QToolBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f7f8fa, stop: 1 #eef0f3);
    border-bottom: 1px solid #d6d6d6;
    padding: 10px 12px;
    spacing: 6px;
}

QToolBar::separator {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #d8d8d8, stop: 0.5 #c8c8c8, stop: 1 #d8d8d8);
    width: 1px;
    margin: 6px 8px;
}

QToolButton {
    background-color: transparent;
    color: #454545;
    border: 1px solid transparent;
    border-radius: 10px;
    padding: 8px 10px;
    margin: 2px;
    font-size: 13px;
}

QToolButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #eff1f4, stop: 1 #e2e6eb);
    border: 1px solid #c7cbd1;
}

QToolButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #dceeff, stop: 1 #c8e0fb);
    border: 1px solid #0078d4;
}

QToolButton:checked {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #e0f0ff, stop: 1 #d0e4f7);
    border: 1px solid #0078d4;
}

QToolButton:disabled {
    color: #a8a8a8;
    background-color: transparent;
}

/* Enhanced Status Bar with Refined Appearance */
QStatusBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #fbfbfc, stop: 1 #f0f1f3);
    border-top: 1px solid #d6d6d6;
    color: #505050;
    padding: 6px 10px;
    font-size: 10pt;
}

/* 侧边栏 - Enhanced with subtle depth and modern styling */
QWidget#SideBar {
    background-color: #f4f5f7;
    border-right: 1px solid #d6d8dc;
}

QWidget#RightSideBar {
    background-color: #f4f5f7;
    border-left: 1px solid #d6d8dc;
}

/* 缩略图样式 - Chrome风格 */
ThumbnailListView {
    background-color: #ffffff;
    border: none;
    outline: none;
    padding: 8px;
}

ThumbnailListView::item {
    background-color: transparent;
    border: none;
    padding: 0px;
    margin: 4px;
}

ThumbnailListView::item:selected {
    background-color: transparent;
    border: 2px solid #1a73e8;
    border-radius: 8px;
}

ThumbnailListView::item:hover {
    background-color: transparent;
    border: 1px solid #4285f4;
    border-radius: 8px;
}

/* 缩略图滚动条 */
ThumbnailListView QScrollBar:vertical {
    border: none;
    background-color: transparent;
    width: 12px;
    margin: 0px;
    border-radius: 6px;
}

ThumbnailListView QScrollBar::handle:vertical {
    background-color: rgba(0, 0, 0, 0.2);
    min-height: 20px;
    border-radius: 6px;
    margin: 0px 2px;
}

ThumbnailListView QScrollBar::handle:vertical:hover {
    background-color: rgba(0, 0, 0, 0.4);
}

ThumbnailListView QScrollBar::handle:vertical:pressed {
    background-color: rgba(0, 0, 0, 0.6);
}

ThumbnailListView QScrollBar::add-line:vertical,
ThumbnailListView QScrollBar::sub-line:vertical {
    height: 0px;
    border: none;
    background: transparent;
}

ThumbnailListView QScrollBar::add-page:vertical,
ThumbnailListView QScrollBar::sub-page:vertical {
    background: transparent;
}

/* Enhanced Tab Widget with Modern Design */
QTabWidget::pane {
    border: 1px solid #d0d0d0;
    border-radius: 6px;
    background-color: #ffffff;
    top: -1px;
    padding: 2px;
}

QTabBar::tab {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f5f5f5, stop: 1 #e8e8e8);
    color: #505050;
    padding: 10px 18px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    margin-right: 3px;
    border: 1px solid #d0d0d0;
    border-bottom: none;
}

QTabBar::tab:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fafafa);
    color: #0066cc;
    border-bottom: 3px solid #3daee9;
    font-weight: 600;
}

QTabBar::tab:hover:!selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #e8e8e8, stop: 1 #d8d8d8);
}

/* 列表视图 */
QListView {
    background-color: #ffffff;
    border: none;
    color: #333333;
    outline: none;
}

QListView::item {
    padding: 6px;
    border-radius: 4px;
}

QListView::item:selected {
    background-color: #e0f0ff;
    color: #0066cc;
}

QListView::item:hover {
    background-color: #f0f0f0;
}

/* 树视图 */
QTreeView {
    background-color: #ffffff;
    border: none;
    color: #333333;
    outline: none;
}

QTreeView::item {
    padding: 4px;
}

QTreeView::item:selected {
    background-color: #e0f0ff;
    color: #0066cc;
}

QTreeView::item:hover {
    background-color: #f0f0f0;
}

QHeaderView::section {
    background-color: #e0e0e0;
    color: #333333;
    padding: 4px;
    border: none;
}

/* 分割线 - Styling moved to Enhanced Splitter section below */

/* 停靠窗口 */
QDockWidget {
    background-color: #ffffff;
    border: 1px solid #c0c0c0;
}

QDockWidget::title {
    background-color: #f0f0f0;
    padding: 4px;
    text-align: left;
    padding-left: 24px;
}

/* Enhanced Progress Bar with Modern Appearance */
QProgressBar {
    border: 1px solid #b8b8b8;
    border-radius: 6px;
    background-color: #f5f5f5;
    text-align: center;
    color: #333333;
    height: 20px;
}

QProgressBar::chunk {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4db8f0, stop: 0.5 #3daee9, stop: 1 #2da4df);
    border-radius: 5px;
}

/* Enhanced Buttons with Modern Design and Refined Visual Feedback */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 0.5 #fafafa, stop: 1 #f0f0f0);
    border: 1px solid #c0c0c0;
    border-radius: 8px;
    padding: 10px 18px;
    color: #333333;
    font-weight: 500;
    font-size: 13px;
    min-height: 28px;
    outline: none;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f9fa, stop: 0.5 #f0f2f4, stop: 1 #e8eaed);
    border: 1px solid #0078d4;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #cce4f7, stop: 0.5 #b8d4f0, stop: 1 #a4c4e8);
    border: 1px solid #0066b8;
    padding: 9px 16px 7px 16px;
}

QPushButton:focus {
    border: 2px solid #0078d4;
    padding: 7px 15px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 0.5 #fafbfc, stop: 1 #f5f6f7);
}

QPushButton:disabled {
    color: #a0a0a0;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f8f8, stop: 1 #f0f0f0);
    border: 1px solid #d8d8d8;
}

QPushButton:default {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #0084e8, stop: 0.5 #0078d4, stop: 1 #006cc1);
    color: #ffffff;
    border: 1px solid #005a9e;
    font-weight: 600;
}

QPushButton:default:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1a8ef0, stop: 0.5 #1084d8, stop: 1 #0a78c8);
    border: 1px solid #0066b8;
}

QPushButton:default:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #0066b8, stop: 0.5 #005a9e, stop: 1 #004e84);
    border: 1px solid #004578;
}

QPushButton:default:focus {
    border: 2px solid #60cdff;
    padding: 7px 15px;
}

/* 标签 */
QLabel {
    color: #333333;
}

/* Enhanced Input Widgets with Modern Focus States */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    border: 1px solid #b8b8b8;
    border-radius: 8px;
    padding: 10px 14px;
    color: #333333;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
    font-size: 13px;
}

QLineEdit:hover, QTextEdit:hover, QPlainTextEdit:hover {
    border: 1px solid #909090;
    background-color: #fafafa;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #0078d4;
    padding: 8px 13px;
    background-color: #ffffff;
    outline: none;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #f8f8f8;
    color: #a8a8a8;
    border: 1px solid #d8d8d8;
}

/* Enhanced ComboBox with Better Visual Feedback */
QComboBox {
    background-color: #ffffff;
    border: 1px solid #b8b8b8;
    border-radius: 5px;
    padding: 7px 10px;
    color: #333333;
    min-height: 22px;
}

QComboBox:hover {
    border: 1px solid #909090;
    background-color: #fafafa;
}

QComboBox:focus {
    border: 2px solid #0078d4;
    padding: 6px 9px;
    background-color: #ffffff;
}

QComboBox:disabled {
    background-color: #f8f8f8;
    color: #a8a8a8;
    border: 1px solid #d8d8d8;
}

QComboBox::drop-down {
    border: none;
    width: 24px;
    border-left: 1px solid #d0d0d0;
}

QComboBox::drop-down:hover {
    background-color: #f0f0f0;
}

QComboBox::down-arrow {
    image: url(:/images/arrow-down.svg);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #b8b8b8;
    border-radius: 6px;
    selection-background-color: #e8f4fd;
    selection-color: #0066cc;
    outline: none;
    padding: 4px;
}

/* SpinBox */
QSpinBox, QDoubleSpinBox {
    background-color: #ffffff;
    border: 1px solid #c0c0c0;
    border-radius: 4px;
    padding: 6px 8px;
    color: #333333;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    border-color: #a0a0a0;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border: 2px solid #0078d4;
    padding: 5px 7px;
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    background-color: transparent;
    border: none;
    width: 16px;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    background-color: transparent;
    border: none;
    width: 16px;
}

/* CheckBox and RadioButton */
QCheckBox, QRadioButton {
    color: #333333;
    spacing: 6px;
}

QCheckBox:hover, QRadioButton:hover {
    color: #0066cc;
}

QCheckBox:disabled, QRadioButton:disabled {
    color: #a0a0a0;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 1px solid #c0c0c0;
    background-color: #ffffff;
}

QCheckBox::indicator {
    border-radius: 3px;
}

QRadioButton::indicator {
    border-radius: 9px;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: #0078d4;
}

QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background-color: #0078d4;
    border-color: #0078d4;
}

QCheckBox::indicator:checked:hover, QRadioButton::indicator:checked:hover {
    background-color: #005a9e;
}

QCheckBox::indicator:disabled, QRadioButton::indicator:disabled {
    background-color: #f5f5f5;
    border-color: #d0d0d0;
}

/* Slider */
QSlider::groove:horizontal {
    background-color: #e0e0e0;
    height: 4px;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: #0078d4;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #005a9e;
}

QSlider::handle:horizontal:pressed {
    background-color: #004578;
}

/* Dialog */
QDialog {
    background-color: #f6f6f7;
    color: #333333;
}

QDialogButtonBox QPushButton {
    min-width: 80px;
}

/* Enhanced Scrollbars with Refined Visual Feedback */
QScrollBar:vertical {
    border: none;
    background-color: #f5f5f5;
    width: 14px;
    margin: 0px;
    border-radius: 7px;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #d8d8d8, stop: 0.5 #c8c8c8, stop: 1 #d8d8d8);
    min-height: 24px;
    border-radius: 7px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #b8b8b8, stop: 0.5 #a0a0a0, stop: 1 #b8b8b8);
}

QScrollBar::handle:vertical:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #909090, stop: 0.5 #808080, stop: 1 #909090);
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: transparent;
}

/* Enhanced Horizontal Scrollbar */
QScrollBar:horizontal {
    border: none;
    background-color: #f5f5f5;
    height: 14px;
    margin: 0px;
    border-radius: 7px;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #d8d8d8, stop: 0.5 #c8c8c8, stop: 1 #d8d8d8);
    min-width: 24px;
    border-radius: 7px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #b8b8b8, stop: 0.5 #a0a0a0, stop: 1 #b8b8b8);
}

QScrollBar::handle:horizontal:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #909090, stop: 0.5 #808080, stop: 1 #909090);
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: transparent;
}

/* ViewWidget 背景 */
QGraphicsView {
background-color: #f0f0f0;
}

/* WelcomeWidget 样式 */
WelcomeWidget {
    background-color: #f6f7f9;
    border: none;
}

/* WelcomeWidget 滚动区域 */
WelcomeWidget QScrollArea {
    background-color: transparent;
    border: none;
}

/* WelcomeWidget 内容区域 */
WelcomeWidget QWidget#WelcomeContentWidget {
    background-color: transparent;
    border: none;
}

/* WelcomeWidget 标题标签 */
WelcomeWidget QLabel#WelcomeTitleLabel {
    color: #333333;
    font-size: 24px;
    font-weight: bold;
    margin: 0px;
}

/* WelcomeWidget 版本标签 */
WelcomeWidget QLabel#WelcomeVersionLabel {
    color: #606060;
    font-size: 12px;
    margin: 0px;
}

/* Enhanced WelcomeWidget 最近文件标题 with improved typography and visual hierarchy */
WelcomeWidget QLabel#WelcomeRecentFilesTitle {
    color: #1a202c;
    font-size: 18px;
    font-weight: 700;
    margin: 24px 0px 16px 0px;
    padding: 0px;
    letter-spacing: -0.025em;
    line-height: 1.2;
}

/* WelcomeWidget 无最近文件标签 - VSCode style */
WelcomeWidget QLabel#WelcomeNoRecentFilesLabel {
    color: #8e8e93;
    font-size: 12px;
    font-weight: 400;
    margin: 16px;
    padding: 8px;
}

/* WelcomeWidget 分隔线 */
WelcomeWidget QFrame#WelcomeSeparatorLine {
    background-color: #e0e0e0;
    border: none;
}

/* Enhanced Recent Files List Components with Modern Styling */
RecentFileListWidget {
    background-color: transparent;
    border: none;
}

RecentFileListWidget QScrollArea#RecentFileListScrollArea {
    background-color: transparent;
    border: none;
}

RecentFileListWidget QWidget#RecentFileListContentWidget {
    background-color: transparent;
    border: none;
}

RecentFileListWidget QLabel#RecentFileListEmptyLabel {
    color: #8e8e93;
    font-size: 13px;
    font-weight: 400;
    background-color: #fafafa;
    border: 1px solid #f0f0f0;
    border-radius: 8px;
    padding: 24px;
    margin: 16px 0px;
}

/* Enhanced Recent File Item Components with Modern Card Design and Shadows */
RecentFileItemWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fafbfc);
    border: 1px solid #e1e5e9;
    border-radius: 12px;
    padding: 16px 20px;
    margin: 6px 0px;
    /* Enhanced card with subtle shadow simulation */
}

RecentFileItemWidget:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f9fa, stop: 1 #f1f3f4);
    border-color: #d1d9e0;
    /* Enhanced hover effect with elevated appearance */
}

RecentFileItemWidget QLabel#RecentFileNameLabel {
    color: #1a1a1a;
    font-size: 14px;
    font-weight: 600;
    background-color: transparent;
    border: none;
    padding: 0px;
    margin: 0px 0px 2px 0px;
}

RecentFileItemWidget QLabel#RecentFilePathLabel {
    color: #6c757d;
    font-size: 12px;
    font-weight: 400;
    background-color: transparent;
    border: none;
    padding: 0px;
    margin: 0px 0px 4px 0px;
}

RecentFileItemWidget QLabel#RecentFileLastOpenedLabel {
    color: #9ca3af;
    font-size: 11px;
    font-weight: 400;
    background-color: transparent;
    border: none;
    padding: 2px 8px;
    margin: 0px;
