}

QDockWidget::close-button:pressed,
QDockWidget::float-button:pressed {
    background-color: rgba(0, 0, 0, 0.1);
}

/* ========================================
   Enhanced QSplitter - Modern Visual Feedback
   ======================================== */

/* Main splitter styling with subtle visual presence */
QSplitter {
    background-color: transparent;
}

/* Splitter handle - the draggable divider between panels */
QSplitter::handle {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 transparent,
                                stop: 0.4 #d0d2d6,
                                stop: 0.5 #c0c4c8,
                                stop: 0.6 #d0d2d6,
                                stop: 1 transparent);
    border-radius: 2px;
    margin: 2px 0px;
}

/* Horizontal splitter handle (vertical divider) */
QSplitter::handle:horizontal {
    width: 6px;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 transparent,
                                stop: 0.3 #d6d8dc,
                                stop: 0.5 #c8ccd0,
                                stop: 0.7 #d6d8dc,
                                stop: 1 transparent);
}

/* Vertical splitter handle (horizontal divider) */
QSplitter::handle:vertical {
    height: 6px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 transparent,
                                stop: 0.3 #d6d8dc,
                                stop: 0.5 #c8ccd0,
                                stop: 0.7 #d6d8dc,
                                stop: 1 transparent);
}

/* Hover state - enhanced visual feedback */
QSplitter::handle:horizontal:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 transparent,
                                stop: 0.3 #0078d4,
                                stop: 0.5 #0066b8,
                                stop: 0.7 #0078d4,
                                stop: 1 transparent);
}

QSplitter::handle:vertical:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 transparent,
                                stop: 0.3 #0078d4,
                                stop: 0.5 #0066b8,
                                stop: 0.7 #0078d4,
                                stop: 1 transparent);
}

/* Pressed state - clear interaction feedback */
QSplitter::handle:horizontal:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 transparent,
                                stop: 0.3 #005a9e,
                                stop: 0.5 #004e84,
                                stop: 0.7 #005a9e,
                                stop: 1 transparent);
}

QSplitter::handle:vertical:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 transparent,
                                stop: 0.3 #005a9e,
                                stop: 0.5 #004e84,
                                stop: 0.7 #005a9e,
                                stop: 1 transparent);
}
