{
    "$comment": "vcpkg manifest for SAST Readium - optimized for minimal build size",
    "name": "sast-readium",
    "version": "1.0.0",
    "description": "A Qt6-based PDF reader application with comprehensive build support for multiple environments",
    "homepage": "https://github.com/NJUPT-SAST/sast-readium",
    "license": "MIT",
    "dependencies": [
        {
            "$comment": "Core Qt6 with minimal features for smaller build",
            "name": "qtbase",
            "default-features": false,
            "features": [
                "concurrent",
                "gui",
                "opengl",
                "thread",
                "widgets"
            ]
        },
        "qt5compat",
        "qtspeech",
        "qtsvg",
        "spdlog",
        {
            "name": "qttools",
            "features": [
                "linguist"
            ]
        },
        {
            "name": "poppler",
            "features": [
                "qt"
            ]
        },
        {
            "name": "pkgconf",
            "host": true
        },
        {
            "name": "vcpkg-cmake",
            "host": true
        },
        {
            "name": "vcpkg-cmake-config",
            "host": true
        }
    ]
}
